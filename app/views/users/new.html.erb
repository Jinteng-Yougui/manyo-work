<h2 class="font-weight-bold">ユーザ新規登録</h2>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "個のエラー") %> があり <%= @user.name %>  登録できません:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>  
  <%= f.label :name, "名前" %>
  <%= f.text_field :name %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email %>

  <%= f.label :password, "パスワード (6文字以上)" %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "パスワード再確認" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "登録", class: "btn btn-warning" %>
<% end %>