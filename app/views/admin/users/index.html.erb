<h2>登録者一覧</h2>

<table class="table">
  <thread>
    <tr>
      <th>登録番号</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>タスク数</th>
    </tr>
  </thread>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.size %></td>
        <td><button type="button" class="btn btn-outline-success"><%= link_to "編集", edit_admin_user_path(user.id) %></button></td>
        <td><button type="button" class="btn btn-outline-danger"><%= link_to "削除", admin_user_path(user.id), method: :delete, data: {confirm: '本当に削除しますか？'} %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新規ユーザー登録", new_admin_user_path, class: "btn btn-warning" %>

<%= paginate @tasks %>